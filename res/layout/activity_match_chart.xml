<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchChartActivity">

    <view
        class="com.inklily.tennischarting.MatchChartActivity$ShotGuide"
        android:id="@+id/shot_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/left_legend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:contentDescription="@string/left_legend_description"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/left_strokes" />

            <ImageView
                android:id="@+id/center_legend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#111"
                android:contentDescription="@string/center_legend_description"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/center_strokes" />

            <ImageView
                android:id="@+id/right_legend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:contentDescription="@string/right_legend_description"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/right_strokes" />
        </LinearLayout>

        <TextView
            android:id="@+id/right_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/left_hand"
            android:layout_alignBottom="@+id/left_hand"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/forehand"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#999" />

        <TextView
            android:id="@+id/left_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/backhand"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#999" />

        <TextView
            android:id="@+id/exit_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/long_press_anywhere_to_end_point"
            android:textAlignment="center"
            android:textColor="#888"
            android:textSize="12sp" />
    </view>

    <view
        android:id="@+id/serve_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.inklily.tennischarting.MatchChartActivity$ServeGuide"
        android:background="#cc5500" >

        <TextView
            android:id="@+id/serve_body_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/serve_left_loc"
            android:layout_alignBottom="@+id/serve_left_loc"
            android:layout_centerHorizontal="true"
            android:text="@string/serve_body"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/serve_left_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="41dp"
            android:text="@string/serve_t"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/serve_right_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/serve_body_loc"
            android:layout_alignBottom="@+id/serve_body_loc"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:text="@string/serve_wide"
            android:textColor="#fff"
            android:textSize="24sp" />
    </view>

    <view
        class="com.inklily.tennischarting.MatchChartActivity$LocationGuide"
        android:id="@+id/location_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6699cc" >

        <TextView
            android:id="@+id/shot_mid_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="@string/shot_loc_midcourt"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/shot_right_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shot_mid_loc"
            android:layout_alignBottom="@+id/shot_mid_loc"
            android:layout_alignParentRight="true"
            android:layout_marginRight="39dp"
            android:text="@string/serve_wide"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/shot_left_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shot_mid_loc"
            android:layout_alignBottom="@+id/shot_mid_loc"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:text="@string/serve_t"
            android:textColor="#fff"
            android:textSize="24sp" />

    </view>

    <view
        class="com.inklily.tennischarting.PointEndMenu"
        android:id="@+id/point_end_menu"
        
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/point_edit_box"
            android:imeOptions="flagNoExtractUi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/point_edit_point"
            android:background="#444"
            android:hint="point"
            android:height="32dp"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/edit_point_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            
            android:background="@drawable/point_note_btn_bg"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:padding="4dp"
            android:minHeight="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/point_edit_box"
            android:text="@string/edit_point" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/point_edit_box" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" >
                <RadioGroup
                    android:id="@+id/point_end_group"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/point_winner"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/winner" />

                    <RadioButton
                        android:id="@+id/point_forced_error"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/forced_error" />

                    <RadioButton
                        android:id="@+id/point_unforced_error"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/unforced_error" />

                    <RadioButton
                        android:id="@+id/point_unknown_point"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/unknown_point"
                        android:checked="true" 
                        />

                    <Button
                        android:id="@+id/point_penalty_point"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/point_penalty" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/serve_end_group"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/point_ace"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/ace" />

                    <RadioButton
                        android:id="@+id/point_service_winner"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/service_winner" />

                    <RadioButton
                        android:id="@+id/point_fault"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/fault"
                        android:checked="true" 
                        />
					<Button
                        android:id="@+id/point_letcord"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/letchord"
                        />
					<RadioButton
                        android:id="@+id/point_unknown_serve"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/unknown_point"
                        />
                    <Button
                        android:id="@+id/point_penalty_serve"
                        style="@style/PointEndOutcomeButton"
                        android:text="@string/point_penalty" />
                </RadioGroup>
            </FrameLayout>

			<RadioGroup
			    android:id="@+id/point_error_group"
			   	android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="horizontal"			     
			    >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"			     
                android:orientation="vertical" >
                <RadioButton
	              android:id="@+id/point_error_net"
	              style="@style/PointErrorButton"
	              android:layout_weight="1"
	              android:text="@string/net" />
                <RadioButton
	              android:id="@+id/point_error_wide"
	              style="@style/PointErrorButton"
	              android:layout_weight="1"
	              android:text="@string/wide" />
                <RadioButton
	              android:id="@+id/point_error_deep"
	              style="@style/PointErrorButton"
	              android:layout_weight="1"
	              android:text="@string/deep" />
				
                        
	        </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
             <RadioButton
                  android:id="@+id/point_error_wide_deep"
                  style="@style/PointErrorButton"
                  android:layout_weight="1"
                  android:text="@string/wide_and_deep" />
                  <RadioButton
                  android:id="@+id/point_error_shank"
                  style="@style/PointErrorButton"
                  android:layout_weight="1"
                  android:text="@string/shank" />
                    <RadioButton
                  android:id="@+id/point_error_unknown"
                  style="@style/PointErrorButton"
                  android:layout_weight="1"
                  android:checked="true"
                  android:text="@string/unknown_error" />
                    <RadioButton
                  android:id="@+id/point_error_foot_fault"
                  style="@style/PointErrorButton"
                  android:layout_weight="1"
                  android:text="@string/foot_fault" />
                </LinearLayout>
			</RadioGroup>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/point_add_note"
                    style="@style/PointEndFinishButton"
                    android:layout_weight="1"
                    android:background="@drawable/point_note_btn_bg"
                    android:text="@string/add_note"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/point_retire"
                    style="@style/PointEndFinishButton"
                    android:layout_weight="1"
                    android:text="@string/retirement" />

                <Button
                    android:id="@+id/point_continue_point"
                    style="@style/PointEndFinishButton"
                    android:layout_weight="1"
                    android:text="@string/cancel_point" />

                <Button
                    android:id="@+id/point_next_point"
                    style="@style/PointEndFinishButton"
                    android:layout_weight="1.25"
                    android:background="@drawable/point_next_btn_bg"
                    android:text="@string/next_point" />
            </LinearLayout>

        </LinearLayout>

    </view>

</FrameLayout>
